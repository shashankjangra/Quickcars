<% if current_user.cars.size != 0 %>

<h1>My Cars</h1>
<table class="table table-striped table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Cartype</th>
            <th>Make</th>
            <th>Model</th>
            <th>Seats</th>
            <th>Year</th>
            <th>Serviced</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @cars.each do |car| %>
        <% if car.user == current_user %> <%# You do not have to check if user is authenticated everytime, you render car's details %>
        <tr>
            <td><%= car.cartype %></td>
            <td><%= car.make %></td>
            <td><%= car.model %></td>
            <td><%= car.seats %></td>
            <td><%= car.year %></td>
            <td><%= car.serviced %></td>
            <td><%= link_to 'Details', car %></td>
            <td><%= link_to 'Edit', edit_car_path(car) %></td>
            <td>
                <%= link_to 'Remove car', car_path(car), method: :delete, data: { confirm: "Are you sure?" } %>
            </td>
            <% end %>
        </tr>
        <% end %>
    </tbody>
</table>
<br>



<%= link_to 'New Car', new_car_path, class:"btn btn-primary" %>

<% end %>