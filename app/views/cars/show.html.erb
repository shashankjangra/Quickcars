<div class="jumbotron">
  <h1 class="display-4">
    <strong>
      <%= @car.make %>
      <%= @car.model %>
    </strong>
  </h1>

  <h1 class="display-10">
    <%= @car.cartype %>, <%= @car.seats %> Seater
  </h1>
  <p class="lead">Drive the car in a certain manner.</p>
  <hr class="my-4">

    <p> Last Serviced: <%= @car.serviced %> </p>

    <p> Car's Model Year: <%= @car.year %> </p>

  <% if @car.user == current_user %>
    <%= link_to 'Edit', edit_car_path(@car), class:"btn btn-primary btn-lg" %>
    <%= link_to 'Go Back', cars_path, class:"btn btn-secondary btn-lg" %>
  <% else %>
    <%= link_to 'Go Back', allcars_cars_path, class:"btn btn-secondary btn-lg" %>
  <% end %>
</div>

<%= render 'slotshow', slot: @slot %>
<%= render 'slot', slot: @slot %>